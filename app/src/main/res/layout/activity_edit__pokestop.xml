<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutEditPokestop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Edit_Pokestop_Activity">

    <TextView
        android:id="@+id/informationEditPokestopTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez remplir tous les champs du formulaire."
        android:textAlignment="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nomEditPokestopTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du pokestop :" />

    <EditText
        android:id="@+id/nomEditPokestopEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom" />

    <Switch
        android:id="@+id/isAreneEditPokestopButtonSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ArÃ¨ne pokemon :" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitudeEditPokestopTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitude :" />

            <EditText
                android:id="@+id/latitudeEditPokestopEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/longitudeEditPokestopTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitude :" />

            <EditText
                android:id="@+id/longitudeEditPokestopEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/valideEditPokestopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Valider"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/supprimerEditPokestopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickSupprimerPokestop"
            android:text="Supprimer" />

        <Button
            android:id="@+id/modifierEditPokestopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickModifierPokestop"
            android:text="Modifier" />
    </LinearLayout>

</LinearLayout>