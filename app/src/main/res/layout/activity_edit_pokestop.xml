<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutEditPokestop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Edit_Pokestop_Activity">

    <TextView
        android:id="@+id/informationEditPokestopTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez remplir tous les champs du formulaire."
        android:textAlignment="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nomEditPokestopTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du pokestop :" />

    <EditText
        android:id="@+id/nomEditPokestopEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/isAreneEditPokestopButtonSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="ArÃ¨ne pokemon :" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitudeEditPokestopTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitude :" />

            <EditText
                android:id="@+id/latitudeEditPokestopEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/longitudeEditPokestopTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitude :" />

            <EditText
                android:id="@+id/longitudeEditPokestopEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/valideEditPokestopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:onClick="onClick"
        android:shadowColor="#0000FF"
        android:shadowDx="-6"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text="Valider"
        android:textAllCaps="false"
        android:textColor="#BFFFF7"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/supprimerEditPokestopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:onClick="onClickSupprimerPokestop"

            android:shadowColor="#0000FF"
            android:shadowDx="-6"
            android:shadowDy="4"
            android:shadowRadius="3"
            android:text="Supprimer"
            android:textAllCaps="false"
            android:textColor="#BFFFF7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/modifierEditPokestopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:onClick="onClickModifierPokestop"

            android:shadowColor="#0000FF"
            android:shadowDx="-6"
            android:shadowDy="4"
            android:shadowRadius="3"
            android:text="Modifier"
            android:textAllCaps="false"
            android:textColor="#BFFFF7"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>