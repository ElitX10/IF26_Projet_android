<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners
                android:topLeftRadius="70dp"
                android:topRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:bottomRightRadius="70dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="#5d99af"
                android:startColor="#55d6df"
                android:endColor="#502e9f"
                android:type="linear"
                />
            <padding
                android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:topLeftRadius="70dp"
                android:topRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:bottomRightRadius="70dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="#1A7CA1"
                android:startColor="#00D9E8"
                android:endColor="#2C0091"
                android:type="linear"
                />
            <padding
                android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</selector>
